		{
			"id": "9ef61bd5-618d-4acd-bb33-604ef39455ba",
			"name": "9ef61bd5-618d-4acd-bb33-604ef39455ba",
			"type": "text",
			"content": "<span> </span><h2 id=\"s3_39\"><a class=\"index\" id=\"1048413\"></a><a class=\"index\" id=\"58838\"></a>Bipolära syndrom</h2>",
			"settings": {
				"preprocessors": {
					"idinjection.js": "false"
