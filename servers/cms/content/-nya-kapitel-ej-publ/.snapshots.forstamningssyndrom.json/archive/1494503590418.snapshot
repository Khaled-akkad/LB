		{
			"id": "7abdd15a-cfaa-4710-bb43-c543574ab6b5",
			"name": "7abdd15a-cfaa-4710-bb43-c543574ab6b5",
			"type": "figure",
			"content": {
				"number": "4",
				"maxwidth": "",
				"image": "/images/kapitel/psykiatri/forstamningssyndrom/figur4.png",
				"title": "",
				"text": "<a class=\"index\" id=\"24517\"></a>”Graviditetssymtom” som kan förväxlas med <a class=\"index\" id=\"1055451\"></a>depressionssymtom",
				"alt": "",
				"id": "s3_65"
			},
			"settings": {
				"preprocessors": {
					"idinjection.js": "false"
				},
				"postprocessors": {
