\r\n</td>\r\n<td>+</td>\r\n<td>+</td>\r\n<td></td>\r\n<td>\r\n<p>5 mg; 10 mg; 20 mg;</p>\r\n<p>30 mg;40 mg; 60 mg</p>\r\n<p>Kapseln kan &ouml;ppnas</p>\r\n</td>\r\n</tr>\r\n<tr>\r\n<td></td>\r\n<td>\r\n<p>Equasym</p>\r\n<p>(kapsel)</p>\r\n</td>\r\n<td>+</td>\r\n<td>-</td>\r\n<td>-</td>\r\n<td>\r\n<p>10 mg; 20 mg; 30 mg;</p>\r\n<p>40 mg; 50 mg; 60 mg</p>\r\n<p>Kapseln kan &ouml;ppnas</p>\r\n</td>\r\n</tr>\r\n<tr>\r\n<td></td>\r\n<td>\r\n<p>Amfetamin,</p>\r\n<p>dexamfetamin</p>\r\n</td>\r\n<td>\r\n<p>Adderall XR</p>\r\n<p>(kapsel)</p>\r\n</td>\r\n<td>Licenspreparat</td>\r\n<td>-</td>\r\n<td>-</td>\r\n<td>\r\n<p>5 mg; 10 mg; 15 mg;</p>\r\n<p>20 mg; 25 mg; 30 mg</p>\r\n<p>Kapseln kan &ouml;ppnas</p>\r\n</td>\r\n</tr>\r\n<tr>\r\n<td>L&aring;ngverkande</td>\r\n<td>\r\n<p>Metylfenidat</p>\r\n</td>\r\n<td>\r\n<p>Concerta</p>\r\n<p>(depottabl)</p>\r\n</td>\r\n<td>+</td>\r\n<td>+</td>\r\n<td>-</td>\r\n<td>\r\n<p>18 mg; 27 mg; 36 mg;</p>\r\n<p>54 mg</p>\r\n<p>Tabletten ska ej delas/</p>\r\n<p>krossas</p>\r\n</td>\r\n</tr>\r\n<tr>\r\n<td></td>\r\n<td>\r\n<p>Lisdexamfetamin</p>\r\n</td>\r\n<td>\r\n<p>Elvanse</p>\r\n<p>(kapsel)</p>\r\n</td>\r\n<td>+</td>\r\n<td>+</td>\r\n<td>+</td>\r\n<td>\r\n<p>30 mg; 50 mg; 70 mg</p>\r\n<p>Kapseln kan &ouml;ppnas</p>\r\n</td>\r\n</tr>\r\n<tr>\r\n<td colspan=\"7\">Icke centralstimulantia</td>\r\n</tr>\r\n<tr>\r\n<td>L&aring;ngverkande</td>\r\n<td>Atomoxetin</td>\r\n<td>\r\n<p>Strattera</p>\r\n<p>(kapsel,</p>\r\n<p>mixtur)</p>\r\n</td>\r\n<td>+</td>\r\n<td>+</td>\r\n<td>+</td>\r\n<td>\r\n<p>Kapsel: 10 mg; 18 mg;</p>\r\n<p>25 mg; 40 mg; 60 mg;</p>\r\n<p>80 mg; 100 mg</p>\r\n<p>Kapseln ska ej &ouml;ppnas</p>\r\n<p></p>\r\n<p>Mixtur 4 mg/ml</p>\r\n</td>\r\n</tr>\r\n</tbody>\r\n</table>",
