				"number": "1",
				"title": "<a class=\"crossref\" id=\"84347\"></a>Diagnostik av virushepatit",
				"id": "b2_16",
				"text": "<table>\r\n<tbody>\r\n<tr>\r\n<td>\r\n<div class=\"tableLine\"><strong>Hepatit</strong></div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\"><strong>Akut</strong></div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\"><strong><span class=\"tab\"></span><span class=\"tab\"></span>Utl&auml;kt</strong></div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\"><strong><span class=\"tab\"></span>Kronisk<span class=\"tab\"></span></strong></div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\"><strong>Vaccinerad</strong></div>\r\n</td>\r\n</tr>\r\n<tr>\r\n<td>\r\n<div class=\"tableLine\"><strong>Hepatit A</strong></div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\"><span class=\"tab\"></span>Anti-HAV IgM positiv<span class=\"tab\"></span></div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">Anti-HAV IgM negativ</div>\r\n<div class=\"tableLine\">Anti-HAV IgG positiv</div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">&ndash;</div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">Anti-HAV IgG positiv</div>\r\n</td>\r\n</tr>\r\n<tr>\r\n<td>\r\n<div class=\"tableLine\"><strong>Hepatit B</strong></div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\"><span class=\"tab\"></span>HBsAg positiv</div>\r\n<div class=\"tableLine\">Anti-HBc IgM positiv<span class=\"tab\"></span></div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">HBsAg negativ</div>\r\n<div class=\"tableLine\">Anti-HBc positiv</div>\r\n<div class=\"tableLine\">Anti-HBs positiv<span class=\"tab\"></span></div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">HBsAg positiv</div>\r\n<div class=\"tableLine\">Anti-HBc positiv</div>\r\n<div class=\"tableLine\">Anti-HBc IgM negativ<span class=\"tab\"></span></div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">Anti-HBs positiv</div>\r\n<div class=\"tableLine\">Anti-HBc negativ</div>\r\n</td>\r\n</tr>\r\n<tr>\r\n<td>\r\n<div class=\"tableLine\"><strong>Hepatit C<span class=\"tab\"></span></strong></div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">Anti-HCV positiv/negativ</div>\r\n<div class=\"tableLine\">HCV RNA positiv</div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\"><span class=\"tab\"></span>Anti-HCV positiv</div>\r\n<div class=\"tableLine\">HCV RNA negativ<span class=\"tab\"></span></div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">Anti-HCV positiv</div>\r\n<div class=\"tableLine\">HCV RNA positiv<span class=\"tab\"></span></div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">&ndash;</div>\r\n</td>\r\n</tr>\r\n<tr>\r\n<td>\r\n<div class=\"tableLine\"><strong>Hepatit D<span class=\"tab\"></span></strong></div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">Anti-HDV positiv<span class=\"tab\"></span></div>\r\n<div class=\"tableLine\">HCV-RNA positiv</div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">Anti-HDV positiv<span class=\"tab\"></span></div>\r\n<div class=\"tableLine\">HDV-RNA negativ</div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">Anti-HDV positiv<span class=\"tab\"></span></div>\r\n<div class=\"tableLine\">HDV RNA positiv</div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">&ndash;</div>\r\n</td>\r\n</tr>\r\n<tr>\r\n<td>\r\n<div class=\"tableLine\"><strong>Hepatit E<span class=\"tab\"></span></strong></div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">Anti-HEV positiv<span class=\"tab\"></span></div>\r\n<div class=\"tableLine\">HEV-RNA positiv</div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">Anti-HEV positiv<span class=\"tab\"></span></div>\r\n<div class=\"tableLine\">HEV-RNA negativ</div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">&ndash;</div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">&ndash;</div>\r\n</td>\r\n</tr>\r\n</tbody>\r\n</table>"
