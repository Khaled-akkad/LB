				"text": "<table>\r\n<tbody>\r\n<tr>\r\n<td>\r\n<div class=\"tableLine\">Tr&ouml;tthet</div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">Huvudv&auml;rk</div>\r\n</td>\r\n</tr>\r\n<tr>\r\n<td>\r\n<div class=\"tableLine\">Yrsel</div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">Kraftl&ouml;shet</div>\r\n</td>\r\n</tr>\r\n<tr>\r\n<td>\r\n<div class=\"tableLine\">Dyspn&eacute;</div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">Koncentrationssv&aring;righeter</div>\r\n</td>\r\n</tr>\r\n<tr>\r\n<td>\r\n<div class=\"tableLine\">S&ouml;mnst&ouml;rningar</div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">Hj&auml;rtklappning</div>\r\n</td>\r\n</tr>\r\n<tr>\r\n<td>\r\n<div class=\"tableLine\">Menstruations-</div>\r\n<div class=\"tableLine\">rubbningar</div>\r\n</td>\r\n<td>\r\n<div class=\"tableLine\">Nedst&auml;mdhet</div>\r\n</td>\r\n</tr>\r\n</tbody>\r\n</table>"
